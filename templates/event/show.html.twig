{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {{ encore_entry_script_tags('showevent') }}
{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {{ encore_entry_link_tags('showevent') }}
{% endblock %}

{% block body %}
    <section class="container">
        <h1>{{ event.name }}</h1>

        <img class="card-img" src="/pictures/event/emptyEventPicture.jpg" alt="Card image cap">

        <div class="row">
            <div class="col-2">
                <div class="detail date">
                    <p class="day">{{event.date|date("d/m")}}</p>
                    <p class="hour">{{event.date|date("h\\hi")}}</p>
                </div>
                <div class="detail place">{{ event.place }}</div>
                <div class="btn btn-primary">s'inscrire</div>
            </div>
            <div class="col-10 text">
                {{ event.text }}
            </div>
        </div>

        <a href="{{ path('event_index') }}">Voir la liste des Ã©venements</a>

        <a href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>

        {{ include('event/_delete_form.html.twig') }}
    </section>
{% endblock %}
