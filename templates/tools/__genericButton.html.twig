{% if icon is not defined %}
    {% set icon = "" %}
{% elseif icon == 'eye' %}
    {% set icon = icon_eye %}
{% elseif icon == 'basket' %}
    {% set icon = icon_basket %}
{% elseif icon == 'check' %}
    {% set icon = icon_check %}
{% elseif icon == 'back' %}
    {% set icon = icon_back %}
{% elseif icon == 'envelop' %}
    {% set icon = icon_envelop %}
{% elseif icon == 'pen' %}
    {% set icon = icon_pen %}
{% elseif icon == 'delete' %}
    {% set icon = icon_delete %}
{% else %}
    {% set icon = "" %}
{% endif %}

{# size management #}
{% if size is not defined %}
    {% set size = "btn-sm" %}
{% elseif size == 'small' %}
    {% set size = "btn-sm" %}
{% elseif size == 'normal' %}
    {% set size = "" %}
{% elseif size == 'large' %}
    {% set size = "btn-lg" %}
{% else %}
    {% set size = "btn-sm" %}
{% endif %}

{# tag style management (<button> ou <a> #}
{% if tagStyle is not defined %}
    {% set tagStyle = "" %}
{% endif %}

{# html code #}
{% if tagStyle == "button" %}
    <button class="btn {{size}} btn-primary mt-2 mr-2"
            type="submit"
            formmethod="post"
            formaction="{{ path??'' }}"
            title="{{ title ?? (text ?? '') }}">
        {{ icon|raw }}
        {{ text??"Appuyez" }}
    </button>
{% else %}
    <a class="btn {{size}} btn-primary mt-2 mr-2" href="{{ path??'' }}">
        {{ icon|raw }}
        {{ text??"Appuyez" }}
    </a>
{% endif %}


