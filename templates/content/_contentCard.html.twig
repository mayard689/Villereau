<div class="card content-card">
    <img class="card-img-top" src="/pictures/content/emptyContentPicture.jpg" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{content.title}}</h5>
        <h6 class="card-title">Publi√© le {{content.date|date("d/m/Y")}}</h6>
        <p class="card-text">{{content.text|u.truncate(125)}}...</p>
        <a class="btn btn-outline-primary m-2" href="{{ path('content_show',{'id':content.id}) }}" >Voir l'article</a>
        <a class="btn btn-primary m-2" href="{{ path('content_edit', {'id': content.id}) }}">Modifier l'article</a>
    </div>

</div>
