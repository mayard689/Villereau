{% extends 'base.html.twig' %}

{% block title %}{{ content.title }}{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {{ encore_entry_script_tags('showcontent') }}
{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {{ encore_entry_link_tags('showcontent') }}
{% endblock %}

{% block body %}
    <section class="container">

        <h1>{{ content.title }}</h1>

        <img class="card-img-top" src="/pictures/content/emptyContentPicture.jpg" alt="{{ content.picture }}">

        <p class="detail">Publi√© le {{ content.date ? content.date|date('Y-m-d') : '' }}</p>

        <div class="text">
            {{ content.text }}
        </div>

        <a href="{{ path('content_index') }}">back to list</a>

        <a href="{{ path('content_edit', {'id': content.id}) }}">edit</a>

        {{ include('content/_delete_form.html.twig') }}


        <h2>Quelques suggestions</h2>

        <div class="card-deck">
            {% for content in contents %}
                {{ include('content/_contentCard.html.twig') }}
            {% endfor %}
        </div>

    </section>
{% endblock %}
