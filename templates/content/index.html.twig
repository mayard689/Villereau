{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {{ encore_entry_script_tags('contentpage') }}
{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {{ encore_entry_link_tags('contentpage') }}
{% endblock %}

{% block body %}

    <section>
        <div class="container">
            <h2>Liste des articles</h2>
            <a href="{{ path('content_new') }}">Créer un nouvel article</a>

            <div class="card-deck">
                {% for content in contents %}
                        {{ include('content/_contentCard.html.twig') }}
                {% else %}
                        Aucun article d'information n'est enregistré à l'heure actuelle.
                {% endfor %}
            </div>

            <a href="{{ path('content_new') }}">Créer un nouvel article</a>
        </div>
    </section>

{% endblock %}
