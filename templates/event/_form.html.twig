{{ form_start(form) }}

    <p>Note : Les membres du conseil municipal ainsi que les autres personnes possédant un compte sur ce site recevront un email automatique au sujet de cet evénement.
        Les abonnés à la newsletter ne seront notifié que lorsque vous appuirez sur le bouton "notifier".</p>

    <div class="form-group row">
        {{ form_label(form.name, 'Choisissez un nom : ') }}
        <div class="col-sm-12 col-md-9">{{ form_widget(form.name, { 'attr': {'class': 'w-100'} }) }}</div>
        <div class="col-12">{{ form_errors(form.name) }}</div>
    </div>

    <div class="form-group row">
        {{ form_label(form.date, 'Choisissez une date : ') }}
        <div class="col-sm-12 col-md-9">{{ form_widget(form.date, { 'attr': {'class': 'w-100'} }) }}</div>
        <div class="col-12">{{ form_errors(form.date) }}</div>
    </div>

    <div class="form-group row">
        {{ form_label(form.text, 'Texte : ') }}
        <div class="col-sm-12 col-md-9">{{ form_widget(form.text, { 'attr': {'class': 'w-100'} }) }}</div>
        <div class="col-12">{{ form_errors(form.text) }}</div>
    </div>

    <div class="form-group row">
        {{ form_label(form.place, 'Lieu : ') }}
        <div class="col-sm-12 col-md-9">{{ form_widget(form.place, { 'attr': {'class': 'w-100'} }) }}</div>
        <div class="col-12">{{ form_errors(form.place) }}</div>
    </div>

    <div class="form-group row">
        {{ form_label(form.contact, 'Email de contact (optionnel) : ') }}
        <div class="col-sm-12 col-md-9">{{ form_widget(form.contact, { 'attr': {'class': 'w-100'} }) }}</div>
        <div class="col-12">{{ form_errors(form.contact) }}</div>
    </div>

    <div class="form-group row ">
        {{ form_label(form.restricted, 'Your name', {
            'label_attr': {'class': 'switch-custom custom-control-label'}
        }) }}
        <div class="col-sm-11">{{ form_widget(form.restricted, { 'attr': {'class': ''} }) }}</div>
        <div class="col-12">{{ form_errors(form.restricted) }}</div>
    </div>

    <div class="form-group row ">
        {{ form_label(form.pictureFile, 'Sélectionnez l\'image : ') }}
        <div class="img-wrapper w-75 overflow-hidden">
            <div class="col-sm-12 col-md-8">{{ form_widget(form.pictureFile) }}</div>
        </div>
        <div class="col-12">{{ form_errors(form.pictureFile) }}</div>
    </div>

    {% include 'tools/_backButton.html.twig' with {
        'text': 'Revenir à la liste des évènements',
        'path': path('event_index')
    } %}

    {% include 'tools/_formAdminValidateButton.html.twig' with {
        'path': path('event_index')
    } %}

{{ form_end(form) }}

