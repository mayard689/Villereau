<section>
    <div class="container">

        <h2>Cliquez Moi !</h2>

        <div class="row">

            <div class="col-sm-6 col-md-3 col-lg-2">
                 <div class="widget-picture-wrapper">
                    <a href="https://www.voisinsvigilants.org/" target="_blank">
                        <img class="widget-picture" src="pictures/clickme/voisins_vigilants.jpg" alt="Logo de voisins vigilants">
                    </a>
                </div>
            </div>

            <div class="col-sm-6 col-md-3 col-lg-2">
                <div class="widget-picture-wrapper">
                    <a href="https://www.voisinsvigilants.org/" target="_blank" data-toggle="modal" data-target="#newsletterModal">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="padding widget-picture bi bi-envelope-open" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8.47 1.318a1 1 0 0 0-.94 0l-6 3.2A1 1 0 0 0 1 5.4v.818l5.724 3.465L8 8.917l1.276.766L15 6.218V5.4a1 1 0 0 0-.53-.882l-6-3.2zM15 7.388l-4.754 2.877L15 13.117v-5.73zm-.035 6.874L8 10.083l-6.965 4.18A1 1 0 0 0 2 15h12a1 1 0 0 0 .965-.738zM1 13.117l4.754-2.852L1 7.387v5.73zM7.059.435a2 2 0 0 1 1.882 0l6 3.2A2 2 0 0 1 16 5.4V14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V5.4a2 2 0 0 1 1.059-1.765l6-3.2z"/>
                        </svg>
                    </a>
                </div>
            </div>


        </div>

    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="newsletterModal" tabindex="-1" role="dialog" aria-labelledby="Inscription à la newsletter" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newsletterRegistration">{{ "S'incrire à la newletter" }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {{ form_start(newsletterForm) }}

                <div class="form-group row">
                    <div class="col-6">{{ form_label(newsletterForm.email, 'Merci d\'indiquer votre email') }}</div>
                    <div class="col-sm-12 col-md-6">{{ form_widget(newsletterForm.email, {'attr': {'class': 'w-100'}}) }}</div>
                    <div class="col-12">{{ form_errors(newsletterForm.email) }}</div>
                </div>

                {% include 'tools/_backButton.html.twig' with {
                    'text': 'Annuler',
                } %}

                {% include 'tools/_formAnonymValidateButton.html.twig' with {
                    'text': 'Enregistrer',
                } %}

                {{ form_end(newsletterForm) }}

            </div>
        </div>
    </div>
</div>
