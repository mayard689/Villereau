{% if planning[day] is defined %}
    {% for event in planning[day] %}
        {% if is_granted('ROLE_SUBSCRIBER') %}
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modal-{{ day }}">
                Planning
            </button>

            <!-- Modal -->
            <div class="modal fade" id="modal-{{ day }}" tabindex="-1" role="dialog" aria-labelledby="modal-{{ day }}-Label" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modal-{{ day }}-Label">Evenements de la journée du {{ day }}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <li>

                                Client : {{ event.booker }}

                                {% include'tools/_deleteButton.html.twig' with {
                                    'path': path('partyroom_delete', {'id': event.id}),
                                    'tokenIndex' : event.id
                                } %}

                                {% if not event.validated %}
                                    {% include 'tools/_adminButton.html.twig' with {
                                        'text': 'Valider',
                                        'path': path('partyroom_validate', {'id' : event.id})
                                    } %}
                                {% else %}
                                    <div class="mt-2">Déjà validé !</div>
                                {% endif %}

                            </li>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="mt-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                </svg>
                <div class="d-none d-md-inline">Déjà pris !</div>
            </div>
        {% endif %}

    {% endfor %}
{% else %}
